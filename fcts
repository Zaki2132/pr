        break

    data = response.json()
    batch = data.get("data", [])  # ou "resources", selon lâ€™API
    if not batch:
        break

    assets.extend(batch)
    print(f"Page {page} rÃ©cupÃ©rÃ©e : {len(batch)} assets")

    if data.get("page", 0) >= data.get("totalPages", 1) - 1:
        break

    page += 1

print(f"âœ… Total assets rÃ©cupÃ©rÃ©s : {len(assets)}")

